pipeline {
  agent any

  tools {
      nodejs 'NodeJS 8.9.0'
    }

  stages{
      stage(build){
          steps{
              echo 'Build'
              dir('result'){
                  sh 'npm install'
              }
          }
      }
      stage(test){
          steps{
              echo 'Test'
              dir('result'){
                sh 'npm install test'
              }

          }
      }
  }
  post{
    always{
        echo 'This pipeline is completed..'
    }
  }
}